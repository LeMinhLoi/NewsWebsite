@section Scripts{
    <script src="~/plugin/mustache.min.js"></script>
    <script src="~/app/controllers/Catalog/Catalogs/Index.js"></script>
}
@section Styles{
    <link href="~/css/MyCustom.css" rel="stylesheet" />
}
<div class="mx-2 mt-2">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-4 p">
                <h4>Danh sách <b>Danh mục</b></h4>
            </div>
            <div class="col-sm-4 p-0">
                @*<div class="search-box">
                    <input type="text" id="txtSearch" class="form-control" placeholder="">
                </div>*@
            </div>
            <div class="col-sm-4 d-flex flex-row-reverse align-items-baseline">
                @*<a id="btnFilter" class="btn btn-outline-info" data-toggle="modal"><i class="fa-solid fa-magnifying-glass"></i><span> Tìm kiếm</span></a>*@
                <a id="btnAddCatalog" href="#" class="btn btn-info" data-toggle="modal"><i class="fa-solid fa-plus"></i><span> Thêm danh mục</span></a>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th class="mycolor">STT</th>
                <th class="mycolor">Tên danh mục</th>
                <th class="mycolor">Mô tả</th>
                <th class="text-center mycolor">Hành động</th>
            </tr>
        </thead>
        <tbody id="tbl-content">
        </tbody>
    </table>
    <div class="py-2 d-flex justify-content-end">
        <div></div>
        <div id="pagination" class="pagination"></div>
    </div>

</div>


<script id="table-template" type="x-tmpl-mustache">
        <tr>
            <td>{{STT}}</td>
            <td>{{Name}}</td>
            <td>{{Description}}</td>
            <td class="text-center">
                <a class="button-edit mx-2" href="#" data-id="{{Id}}" data-toggle="modal"><i class="fa-solid fa-file-pen" title="Chỉnh sửa"></i></a>
                <a class="mx-2" href="catalog/delete/{{Id}}" onclick="return confirm('Bạn chắc chắn muốn xóa mục này?');" data-toggle="modal"><i class="fa-solid fa-trash text-danger" title="Xóa"></i></a>
            </td>
        </tr>
</script>
