@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model NewsWebsite.ViewModel.User.UserCreateRequest
}
@section Scripts{
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/plugins/buffer.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/plugins/filetype.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/plugins/piexif.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/plugins/sortable.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/fileinput.js"></script>
    <script src="~/app/controllers/User/AddUser/Index.js"></script>
}
@section Styles{
    <link href="~/css/MyCustom.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-fileinput/css/fileinput.css" rel="stylesheet" />
}
<div class="bg-light">
    <div class="row my-2">
        <div class="col-lg-4 col-md-4 col-sm-5">
            <a class="btn btn-outline-secondary" href="/view-list-blogger"><i class="fa-solid fa-circle-left"></i> | Trang danh sách</a>
        </div>
    </div>
    <form id="formAddUser" autocomplete="off" enctype="multipart/form-data" asp-controller="User" asp-action="AddBlogger" method="post">
        <div class="row">
            <div class="col-md-6 m-0 mt-2">
                <div class="card">
                    <div class="card-header bg-primary">
                        <h3 class="card-title text-center text-white">Thông tin cá nhân của blogger</h3>
                    </div>
                    <div class="form-outline m-3">
                        <label class="form-label" style="font-weight: 500;">
                            *Họ
                        </label>
                        <input id="txtLastName" asp-for="LastName" type="text" class="form-control form-control-lg" />
                        <div id="error_last_name" class="mt-1 error">
                        </div>
                    </div>
                    <div class="form-outline m-3">
                        <label class="form-label" style="font-weight: 500;">
                            *Tên
                        </label>
                        <input id="txtFirstName" asp-for="FirstName" type="text" class="form-control form-control-lg" />
                        <div id="error_first_name" class="mt-1 error">
                        </div>
                    </div>
                    <div class="form-outline m-3">
                        <label class="form-label" style="font-weight: 500;">
                            *Nick
                            Name
                        </label>
                        <input id="txtNickName" asp-for="NickName" type="text" class="form-control form-control-lg" />
                        <div id="error_nick_name" class="mt-1 error">
                        </div>
                    </div>
                    <div class="form-outline m-3">
                        <label class="form-label"
                               style="font-weight: 500;">*Số điện thoại</label>
                        <input id="txtPhone" asp-for="Phone" type="text" class="form-control form-control-lg" />
                        <div id="error_phone" class="mt-1 error">
                        </div>
                    </div>
                    <div class="form-outline m-3">
                        <label class="form-label"
                               style="font-weight: 500;">*Email</label>
                        <input id="txtEmail" asp-for="Email" type="text" class="form-control form-control-lg" />
                        <div id="error_email" class="mt-1 error">
                        </div>
                    </div>
                    <div class="form-outline m-3">
                        <label class="form-label" style="font-weight: 500;">
                            *Ngày sinh
                        </label>
                        <input id="txtDoB" placeholder="" asp-for="DoB" onblur="(this.type='text')" onfocus="(this.type='date')" type="text" class="form-control form-control-lg" />
                        <div id="error_dob" class="mt-1 error">
                        </div>
                    </div>
                    <div class="form-outline m-3">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="d-md-flex justify-content-around align-items-center">
                                    <h6 class="mb-0 me-4" style="font-weight: 500; font-size: medium;">
                                        *Giới tính:
                                    </h6>

                                    <div class="form-check form-check-inline mb-0 me-4">
                                        <input class="form-check-input" type="radio"
                                               id="femaleGenderRadio" value="option1" />
                                        <label class="form-check-label" for="femaleGenderRadio">Female</label>
                                    </div>
                                    <div class="form-check form-check-inline mb-0 me-4">
                                        <input class="form-check-input" type="radio"
                                               id="maleGenderRadio" value="option2" checked="true" />
                                        <label class="form-check-label" for="maleGenderRadio">Male</label>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>

                    <input type="checkbox" id="checkGender" asp-for="Gender" checked hidden>

                </div>
            </div>

            <div class="col-md-6 m-0 mt-2 p-0 m-0">
                <div class="card mb-3">
                    <div class="card-header bg-primary">
                        <h3 class="card-title text-center text-white">Ảnh của blogger</h3>
                    </div>
                    <div class="text-center p-3">
                        <input id="pathImage" hidden type="text" value="https://as1.ftcdn.net/v2/jpg/03/53/11/00/1000_F_353110097_nbpmfn9iHlxef4EDIhXB1tdTD0lcWhG9.jpg" hidden />
                        <div class="kv-avatar">
                            <div class="file-loading ">
                                <input enctype="multipart/form-data" id="avatar-2" asp-for=@Model.ImageUser type="file" required>
                            </div>
                        </div>
                    </div>
                    <div id="kv-avatar-errors-1" class="text-center" style="display:none"></div>
                </div>
                <div class="card">
                    <div class="card-header bg-primary">
                        <h3 class="card-title text-center text-white">Đặt mật khẩu</h3>
                    </div>
                    <div class="form-outline mb-4 mx-4 mt-1">
                        <label class="form-label" style="font-weight: 500;">
                            *Nhập mật khẩu (Phải có số, chữ cái thường và hoa, kí tự đặc biệt, độ dài ít nhất là 8)
                        </label>
                        <div class="input-group mx-1">
                            <input autocomplete="new-password" id="NewPass" asp-for="Password" type="password" class="form-control form-control-lg" title="" />
                            <button id="showNewPass" class="btn" type="button"><i id="icon_show_new_pass" class="fa-solid fa-eye"></i></button>
                        </div>
                        <div>
                            <h5 id="new_pass_check" class="mt-1 error">
                            </h5>
                        </div>
                    </div>
                    <div class="form-outline mb-4 mx-4">
                        <label class="form-label" style="font-weight: 500;">
                            *Xác nhận mật khẩu
                        </label>
                        <div class="input-group mx-1">
                            <input id="ConfirmPass" type="password" class="form-control form-control-lg" />
                            <button id="showConfirmPass" class="btn" type="button"><i class="fa-solid fa-eye"></i></button>
                        </div>
                        <div>
                            <h5 id="confirm_pass_check" class="mt-1 error">
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <row>
            <div class="d-flex justify-content-center pt-3">
                <button id="btnAdd" class="btn btn-info btn-lg ms-2 mb-2">Thêm mới một blogger</button>
            </div>
        </row>
    </form>
</div>