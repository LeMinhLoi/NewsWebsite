@{
}
@section Scripts{
    <script src="~/plugin/mustache.min.js"></script>
    <script src="~/plugin/jquery.twbsPagination.min.js"></script>
    <script src="~/app/controllers/News/ListNews/Index.js"></script>
}
@section Styles{
    <link href="~/css/MyCustom.css" rel="stylesheet" />
}

<div class="mx-2 mt-2">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-4 p">
                <h4>Danh sách <b>Bài viết</b></h4>
            </div>
            <div class="col-sm-4 p-0">
            </div>
            <div class="col-sm-4 d-flex flex-row-reverse align-items-baseline">
                @*<a id="btnAddCatalog" href="#" class="btn btn-info" data-toggle="modal"><i class="fa-solid fa-plus"></i><span> Thêm danh mục</span></a>*@
            </div>
        </div>
    </div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th class="mycolor">STT</th>
                <th class="mycolor">Tiêu đề</th>
                <th class="mycolor">Thể loại</th>
                <th class="mycolor">Ngày tạo</th>
                <th class="mycolor">Tác giả</th>
                <th class="text-center mycolor">Hành động</th>
            </tr>
        </thead>
        <tbody id="tbl-content">
        </tbody>
    </table>
    <div class="py-2 d-flex justify-content-end">
        <div></div>
        <div id="pagination" class="pagination"></div>
    </div>

</div>


<script id="table-template" type="x-tmpl-mustache">
        <tr>
            <td>{{STT}}</td>
            <td>{{Title}}</td>
            <td>{{Catagories}}</td>
            <td>{{DateCreate}}</td>
            <td>{{Author}}</td>
            <td class="text-center">
                <a class="button-view mx-2" href="#" data-id="{{Id}}" data-toggle="modal"><i class="fa-solid fa-eye" title="Xem chi tiết bài viết"></i></a>
                <a class="mx-2" href="" onclick="return confirm('Bạn chắc chắn muốn xóa bài viết này?');" data-toggle="modal"><i class="fa-solid fa-trash text-danger" title="Xóa"></i></a>
            </td>
        </tr>
</script>


